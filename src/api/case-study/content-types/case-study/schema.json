{
  "kind": "collectionType",
  "collectionName": "case_studies",
  "info": {
    "singularName": "case-study",
    "pluralName": "case-studies",
    "displayName": "Case Study",
    "description": "UX/UI projects and case studies"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "year": {
      "type": "integer"
    },
    "tools": {
      "type": "text"
    },
    "thumbnail": {
      "type": "media",
      "multiple": false,
      "required": true
    },
    "gallery": {
      "type": "media",
      "multiple": true
    },
    "intro": {
      "type": "richtext",
      "required": true
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "is_protected": {
      "type": "boolean",
      "default": false
    },
    "password_hint": {
      "type": "string"
    },
    "tags": {
      "type": "text"
    },
    "featured": {
      "type": "boolean",
      "default": false
    }
  }
}
